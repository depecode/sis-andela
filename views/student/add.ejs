<h3 class="align_center">Add Student Information</h3>

<div class="row">

    <div class="col-md-6 offset-md-3">
        <form method="post" action="/student/create">

            <div class="form-group">
                <label for="matric_no">Matriculation No</label>
                <input type="text" class="form-control" name="matricNo" id="matric_no" aria-describedby="matricNo" placeholder="141245">
                <small id="matricNo" class="form-text text-muted">Your Matric No is six digits.</small>
            </div>

            <div class="form-group">
                <label for="first_name">First Name</label>
                <input type="text" class="form-control" name="firstName" id="first_name" aria-describedby="firstName" placeholder="Happiness">
                <small id="firstName" class="form-text text-muted">Your First Name is Required.</small>
            </div>

            <div class="form-group">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" name="lastName" id="last_name" aria-describedby="lastName" placeholder="Love">
                <small id="lastName" class="form-text text-muted">Your Last Name is Required.</small>
            </div>

            <div class="form-group">
                <label for="middle_name">Middle Name</label>
                <input type="text" class="form-control" name="middleName" id="middle_name" aria-describedby="middleName" placeholder="Godwin">
                <small id="middleName" class="form-text text-muted">Your Middle Name is Required.</small>
            </div>

            <div class="form-group">
                <label for="gender">Gender</label>
                <input type="text" class="form-control" name="gender" id="gender" aria-describedby="gender" placeholder="Female">
                <small id="gender" class="form-text text-muted">Male Or Female.</small>
            </div>

            <div class="form-group">
                <label for="birth_date">Birth Date</label>
                <input type="date" class="form-control" name="birthDate" id="first_name" aria-describedby="firstName" placeholder="Enter Birth Date">
                <small id="firstName" class="form-text text-muted">Your Birth Date is Required.</small>
            </div>

            <div class="form-group">
                <label for="email_address">Email Address</label>
                <input type="email" class="form-control" name="emailAddress" id="email_address" aria-describedby="emailAddress" placeholder="love@andela.com">
                <small id="emailAddress" class="form-text text-muted">Your Email Address is Required.</small>
            </div>

            <div class="form-group">
                <label for="phone_number">Phone Number</label>
                <input type="text" class="form-control" name="phoneNumber" id="phone_number" aria-describedby="phoneNumber" placeholder="09056123456">
                <small id="phoneNumber" class="form-text text-muted">Your Phone Number is Required.</small>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


