<h3 class="align-center">Student Information</h3>

<h5><a href="/student/add" class="btn btn-primary">Add Student</a></h5>

<div class="row">
    <div class="col-md-6">
      <table class="table table-striped">
          <thread>
              <tr>
                <th scope="col">Matric No</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Show</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
          </thread>
          <tbody>

            <% students.forEach(function(student){ %>
                <tr>
                    <th scope="row"><%= student.matricNo %></th>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td>
                        <a href="/student/show/<%= student.id %>" class="btn btn-success">Show</a>
                    </td>
                    <td>
                        <a href="/student/edit/<%= student.id %>" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <form action="/student/delete/<%- student.id %>" method="post">
                            <input type="submit" value="Delete" class="btn btn-danger">
                        </form>
                    </td>
                </tr>

               

            <% }) %>
            
       
          </tbody>
      </table>  
    </div>

</div>